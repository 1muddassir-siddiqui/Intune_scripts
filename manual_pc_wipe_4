# Prompt the user for confirmation before proceeding
$confirmation = Read-Host "This action will wipe your PC and restore it to factory settings. Are you sure you want to continue? (Y/N)"

if ($confirmation -eq "Y" -or $confirmation -eq "y") {
    # Initiate the factory reset
    $resetParams = @{
        Path              = "root\cimv2:Win32_OperatingSystem=@"
        Name              = "Reset"
        Arguments         = @{ResetType = 3}
        ErrorAction       = 'Stop'
        ErrorVariable     = 'ResetError'
        OutVariable       = 'ResetOutput'
    }

    try {
        $result = Invoke-WmiMethod @resetParams
        Write-Host "Factory reset initiated. Your PC will now restart and reset to factory settings."
    }
    catch {
        Write-Host "An error occurred while initiating the factory reset: $($ResetError[0].Exception.Message)"
        exit
    }
}
else {
    Write-Host "Factory reset cancelled."
}
